<div class="navbar theme-white">
   <div class="navbar-inner">
      <div class='left'>
         <%= link_to( raw('<i class="icon icon-back"></i>'), @user, { :class => "link icon-only back", "data-reload" => 'true',  "data-ignoreCache" => 'true' } ) %>
      </div>
      <div class='center sliding'>
         <div class="navbar-logo middle">Metrics (2/3)</div>
      </div>
      <div class='right sliding'>
      </div>
   </div>
</div>
<div class="pages navbar-through fixed-through">
   <div class='page' data-page="new-map-2">
      <div class='page-content new-circle'>
        
         <ul class="chart-list">
            <% @metrics.each do |metric| %>
            <li>
               <div class="list-label-inner">
                  <div class="list-user">
                     <% url_metric = 'svg/metric_' + metric.code.to_s %>
                     <%= image_tag(url_metric, class: "list-image round-image-25") %> 
                     <div class="list-name">
                        <span class="bold">
                        <%= metric.name %>
                        
                        </span>
                        <span class="list-sync light">
                        <%= metric.description %>   
                        </span>
                     </div>
                  </div>
                  <div class="list-label">
                     <label class="label-switch">
                        <input type="checkbox" name="metric" metric="<%= metric.code.to_s %>" checked>
                        <div class="checkbox"></div>
                     </label>
                  </div>
               </div>
            </li>
             <% end %>
         </ul>

         <input type="hidden" name="map-name-hidden">
         <input type="hidden" name="id-hidden" value="<%= current_user.id %>">

        
         <%= link_to( raw('Participants <i class="fa fa-angle-right"></i> '), { :controller => "maps", :action => "new_stp3" }, { :class => "button-next third-size button button-big active"} ) %>
      </div>
   </div>
</div>